<Window x:Class="Tagger.UI.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tagger.UI"
        mc:Ignorable="d"
        Title="Input" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="Manual">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="InputLabel" Grid.Row="0" TextWrapping="WrapWithOverflow" VerticalAlignment="Center" Margin="10,0,10,0"/>
        <TextBox x:Name="Input" Grid.Row="1" VerticalAlignment="Center" Margin="20,0,20,0"/>
        <Button x:Name="Submit" Grid.Row="2" Content="Submit" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Submit_Click" />
    </Grid>
</Window>
